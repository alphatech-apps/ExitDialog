<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <corners  android:radius="5dp"/>
                    <solid android:color="#82FF1100" />
                    <stroke
                        android:color="@color/fabColor"
                        android:width="2dp"/>
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="0dp" android:height="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/fabColorDark" />
                    <corners  android:radius="5dp"/>
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="0dp" android:height="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
