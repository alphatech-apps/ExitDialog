<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_exit_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_p"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/x38063_log_out" />
            <!--
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardElevation="6dp"
                            android:background="@color/white"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/ic_launcher"
                                android:background="@color/white"
                                android:layout_height="80dp"/>

                        </androidx.cardview.widget.CardView>
            -->

            <TextView
                android:id="@+id/exit_tittlex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/do_you_want_to_exit"
                android:textColor="@color/DayBlack_NightWhite"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/cance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/blank_green_stroke_button_background"
                    android:paddingLeft="14dp"
                    android:paddingTop="7dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="7dp"
                    android:text="@string/cancel"
                    android:textColor="@color/fabColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ok_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/green_fill_button_background"
                    android:paddingLeft="30dp"
                    android:paddingTop="8dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="8dp"
                    android:text="@string/exit"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>